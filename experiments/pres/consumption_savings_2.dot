digraph G {

    splines="FALSE";

    /* Entities */
    "c[t]" [shape="square"]
    
    "c[t+1]" [shape="square"]

    "h[t$]" [shape="square"]

    "a[t$]" -> "h[t$]" [color="green", label="h()"]



    /* Relationships */
    "m[t]" -> "c[t]" [color="red"]
    {"m[t]", "c[t]"} -> "a[t$]"
    "a[t$]" -> "m[t+1]"
    


    {"a[t$]" "m[t+1]" "c[t+1]"} -> "h[t$]" [color="blue"]



    "m[t+1]" -> "c[t+1]" [color="red", label="c()"]


    
    // {"m[t]" "m[t$1]" "c[t$1]"} -> "c[t]" [color="blue"]
    
    

    /* Ranks */
    {rank=same "m[t]" "c[t]"}
    {rank=same "a[t$]" "h[t$]"}
    {rank=same "m[t+1]" "c[t+1]"}
    
}


